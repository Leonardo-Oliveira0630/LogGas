
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funções Auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Regras por Coleção

    // Usuários: Cada um lê seu perfil, Admin lê/escreve todos
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    // Produtos: Todos autenticados podem ver, apenas Admin pode gerenciar
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Vendas: Admin vê tudo. Clientes criam e veem apenas as próprias
    match /sales/{saleId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.customerId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Financeiro (Transações): Apenas Administradores podem acessar ou modificar
    match /transactions/{transactionId} {
      allow read, write: if isAdmin();
    }

    // Clientes (CRM/Métricas): Apenas Administradores podem acessar
    match /customers/{customerId} {
      allow read, write: if isAdmin();
    }
    
  }
}
